module Test_Interceptors
{
  exception Silly
    {};

  interface Visual
  {
    void normal (in long arg);
    // Normal operation.

    long calculate (in long one, in long two);
    // Normal operation with a return val.

    void user ()
      raises (Silly);
    // throws a user exception.

    void system ();
    // thows a system exception.

   oneway void shutdown ();
    // shutdown the ORB
  };
};
