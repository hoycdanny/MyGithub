module TimeModule {

  struct TimeOfDay {
    short hour;    // 0 - 23
    short minute;  // 0 - 59
    short second;  // 0 - 59
  };

  interface Time {
    TimeOfDay   get_gmt();

    // Make this a oneway call to allow
    // the server to shut down immediately.
    oneway void Shutdown();
  };

};
